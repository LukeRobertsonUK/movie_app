<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @player.name %>
</p>

<p>
  <b>Birth date:</b>
  <%= @player.birth_date %>
</p>

<p>
  <b>Sex:</b>
  <%= @player.sex %>
</p>

<p>
  <b>Biography:</b>
  <%= @player.biography %>
</p>

<% unless @player.movies.blank? %>
<b>Filmography:</b>

  <ul>
      <% @player.movies.order('release_date DESC').each do |movie|%>

              <%=movie.release_date%>:
              <%=movie.movies_players.find_by_player_id(@player[:id]).role.name%>,
              <%=movie.name%>



              <br>

            <%end%>

  <%end%>

<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
