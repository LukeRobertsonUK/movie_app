<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @movie.name %>
</p>

<p>
  <b>Release date:</b>
  <%= @movie.release_date %>
</p>

<p>
<b>Studio:</b>
<%=@movie.studio.name%>
</p>

<p>
<b>Genre:</b>
<%=@movie.genre.name%>
</p>


<p>
  <b>Gross takings:</b>
  <%= @movie.gross_takings %>
</p>

<p>
  <b>Certificate:</b>
  <%= @movie.certificate %>
</p>

<p>
  <b>Review score:</b>
  <%= @movie.review_score %>
</p>

<p>
  <b>Plot summary:</b>
  <%= @movie.plot_summary %>
</p>

<p>
  <b>Luvies List</b>
</p>
<ul>
  <% @movie.players.each do |player| %>
  <li>
    <%= player.name %>:
    <%= player.movies_players.find_by_player_id(player[:id]).role.name%>
  </li>
</ul>
<%end%>
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
