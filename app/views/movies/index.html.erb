<h1>Listing movies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Release date</th>
    <th>Gross takings</th>
    <th>Certificate</th>
    <th>Review score</th>
    <th>Plot summary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
    <td><%= movie.release_date %></td>
    <td><%= movie.gross_takings %></td>
    <td><%= movie.certificate %></td>
    <td><%= movie.review_score %></td>
    <td><%= movie.plot_summary %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

